<div class="page-header">
<h1>Listing flights</h1>

<table>
  <thead>
    <tr>
      <th>Departs at</th>
      <th>Airport</th>
      <th>Departs from</th>
      <th>Arrives at</th>
      <th>Seats remaining</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  </div>
<div class="row">
  <div class="col-md-12">
    <table class='table table-striped'>
  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.departs_at  %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.departs_from %></td>
        <td><%= flight.Arrives_at %></td>
        <td><%= flight.Seats_remaining %></td>
        <td> <%= link_to "Book Now", '#', class: 'btn btn-xs btn-primary'%></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%= link_to 'New Flight', new_flight_path %>
  </div>
</div>